# 应用配置
APP_NAME="GPT Team 管理系统"
APP_VERSION="0.1.0"
APP_HOST="0.0.0.0"
APP_PORT=8008
DEBUG=False

# 数据库配置
DATABASE_URL="sqlite+aiosqlite:///./team_manage.db"

# 安全配置
SECRET_KEY="change-me-strong-secret"
ADMIN_PASSWORD="change-me"  # 首次启动后请修改

# 日志配置
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# 代理配置 (可选)
PROXY=""  # 格式: http://host:port 或 socks5://host:port 或 socks5://user:pass@host:port
PROXY_ENABLED=False

# JWT 配置
JWT_VERIFY_SIGNATURE=False  # 开发环境可设为 False,生产环境建议设为 True

# 时区配置
TIMEZONE=Asia/Shanghai  # 默认使用中国时区

# 定时同步配置
SYNC_ENABLED=True
SYNC_INTERVAL_MINUTES=60
SYNC_RETRY_COUNT=1
SYNC_RETRY_DELAY_SECONDS=5
